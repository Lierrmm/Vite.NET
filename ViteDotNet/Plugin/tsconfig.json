{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2019",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}